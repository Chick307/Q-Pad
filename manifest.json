{
	"name": "Chrome Pad",
	"version": "0.0.2.1",
	"description": "The simple notepad.",
	
	"icons": {
		"16": "icons/icon16.png",
		"128": "icons/icon128.png"
	},
	
	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],
	
	"background_page": "back.html",
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": [],
			"js": ["js/content.js"]
		}
	],
	
	"options_page": "views/option.html",
	
	"browser_action": {
		"default_title": "Chrome Pad",
		"default_icon": "icons/icon19.png",
		"popup": "views/popup.html"
	}
}
